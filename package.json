{
    "name": "@slimio/prism",
    "version": "0.1.0",
    "description": "SlimIO distribution server addon",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test": "cross-env psp && ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "c8 -r=\"html\" npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/Prism.git"
    },
    "keywords": [
        "SlimIO",
        "distribution",
        "server",
        "prism",
        "archive",
        "manager"
    ],
    "files": [
        "index.js",
        "src/*.js"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/Prism/issues"
    },
    "homepage": "https://github.com/SlimIO/Prism#readme",
    "dependencies": {
        "@slimio/addon": "^0.22.1",
        "@slimio/tarball": "^0.1.0",
        "@slimio/timemap": "^0.3.0",
        "semiver": "^1.1.0",
        "semver": "^6.1.1",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.0.0-next.3",
        "@slimio/psp": "^0.8.0",
        "@types/node": "^12.12.5",
        "ava": "^3.7.1",
        "c8": "^6.0.1",
        "cross-env": "^6.0.3",
        "dotenv": "^8.2.0",
        "eslint": "^6.6.0",
        "husky": "^3.0.9",
        "jsdoc": "^3.6.2",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 98,
        "statements": 98,
        "functions": 98,
        "branches": 90
    }
}
